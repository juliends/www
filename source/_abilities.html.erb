          <% data.skills.abilities.languages.each_with_index do |hash, index| %>
            <% if index.even? %>
              <div class='col-md-5'>
            <% else %>
              <div class='col-md-5 col-md-offset-2'>
            <% end %>
              <ul class="list-unstyled">
                <% hash.each do |key, value| %>
                  <li class="flex-space-between">
                    <span class="ability-title"><%= key %></span>
                    <div><%= content_tag("span","",class:"fa fa-star") * value.to_i %></div> 
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>     
      </div>
    </div>
  </div>
</div>
